pragma solidity ^0.8.20;

contract SimpleMath {
    function add(uint256 a, uint256 b) public pure returns (uint256) {
        uint256 sum = a + b;
        return sum;
    }

    function sumMemoryArray(uint256 x, uint256 y, uint256 z) public pure returns (uint256) {
        uint256[] memory memoryArray = new uint256[](3);

        memoryArray[0] = x;
        memoryArray[1] = y;
        memoryArray[2] = z;

        uint256 totalSum = 0;
        for (uint i = 0; i < memoryArray.length; i++) {
            totalSum += memoryArray[i];
        }

        return totalSum;
    }
}

